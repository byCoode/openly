{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
	"baseUrl": "./",
	"rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/index.ts"]
}
